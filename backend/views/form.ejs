<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Generate Invoice</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f4f7f8;
        margin: 0;
        padding: 20px;
      }

      .container {
        max-width: 800px;
        margin: auto;
        background: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
      }

      h2 {
        text-align: center;
        color: #333;
      }

      h3 {
        color: #555;
        margin-bottom: 10px;
        border-bottom: 2px solid #ddd;
        padding-bottom: 5px;
      }

      input[type="text"],
      input[type="number"],
      input[type="date"],
      select {
        width: calc(50% - 10px);
        padding: 10px;
        margin: 5px 0;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
      }

      .full-width {
        width: 100%;
      }

      .form-section {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
      }

      button {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 15px;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
        margin: 10px 0;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #218838;
      }

      .add-item-btn {
        background-color: #007bff;
      }

      .add-item-btn:hover {
        background-color: #0056b3;
      }

      .item {
        border: 1px solid #ddd;
        padding: 10px;
        margin: 10px 0;
        border-radius: 4px;
        background-color: #f9f9f9;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>Generate Invoice</h2>
      <form action="/generate-invoice" method="POST">
        <!-- Seller Details -->
        <h3>Seller Details</h3>
        <div class="form-section">
          <input
            type="text"
            name="sellerName"
            placeholder="Seller Name"
            required
          />
          <input
            type="text"
            name="sellerAddress"
            placeholder="Seller Address"
            required
          />
          <input
            type="text"
            name="sellerCity"
            placeholder="Seller City"
            required
          />
          <input
            type="text"
            name="sellerState"
            placeholder="Seller State"
            required
          />
          <input
            type="text"
            name="sellerPincode"
            placeholder="Seller Pincode"
            required
          />
          <input
            type="text"
            name="sellerPan"
            placeholder="Seller PAN No."
            required
          />
          <input
            type="text"
            name="sellerGst"
            placeholder="Seller GST Registration No."
            class="full-width"
            required
          />
        </div>

        <!-- Billing Details -->
        <h3>Billing Details</h3>
        <div class="form-section">
          <input
            type="text"
            name="billingName"
            placeholder="Billing Name"
            required
          />
          <input
            type="text"
            name="billingAddress"
            placeholder="Billing Address"
            required
          />
          <input
            type="text"
            name="billingCity"
            placeholder="Billing City"
            required
          />
          <input
            type="text"
            name="billingState"
            placeholder="Billing State"
            required
          />
          <input
            type="text"
            name="billingPincode"
            placeholder="Billing Pincode"
            required
          />
          <input
            type="text"
            name="billingStateCode"
            placeholder="Billing State Code"
            class="full-width"
            required
          />
        </div>

        <!-- Shipping Details -->
        <h3>Shipping Details</h3>
        <div class="form-section">
          <input
            type="text"
            name="shippingName"
            placeholder="Shipping Name"
            required
          />
          <input
            type="text"
            name="shippingAddress"
            placeholder="Shipping Address"
            required
          />
          <input
            type="text"
            name="shippingCity"
            placeholder="Shipping City"
            required
          />
          <input
            type="text"
            name="shippingState"
            placeholder="Shipping State"
            required
          />
          <input
            type="text"
            name="shippingPincode"
            placeholder="Shipping Pincode"
            required
          />
          <input
            type="text"
            name="shippingStateCode"
            placeholder="Shipping State Code"
            class="full-width"
            required
          />
        </div>

        <!-- Order and Invoice Details -->
        <h3>Order and Invoice Details</h3>
        <div class="form-section">
          <input
            type="text"
            name="orderNo"
            placeholder="Order Number"
            required
          />
          <input
            type="date"
            name="orderDate"
            placeholder="Order Date"
            required
          />
          <input
            type="text"
            name="invoiceNo"
            placeholder="Invoice Number"
            required
          />
          <input
            type="text"
            name="invoiceDetails"
            placeholder="Invoice Details"
            required
          />
          <input
            type="date"
            name="invoiceDate"
            placeholder="Invoice Date"
            required
          />
          <input
            type="text"
            name="placeOfSupply"
            placeholder="Place of Supply"
            required
          />
          <input
            type="text"
            name="placeOfDelivery"
            placeholder="Place of Delivery"
            required
          />
          <label>Reverse Charge:</label>
          <select name="reverseCharge" required class="full-width">
            <option value="Yes">Yes</option>
            <option value="No">No</option>
          </select>
          <input
            type="number"
            step="0.01"
            name="shippingCharges"
            placeholder="Shipping Charges"
            class="full-width"
            required
          />
        </div>

        <!-- Item Details -->
        <h3>Item Details</h3>
        <div id="items">
          <div class="item">
            <input
              type="text"
              name="itemDescription[]"
              placeholder="Description"
              class="full-width"
              required
            />

            <input
              type="number"
              step="1"
              name="itemUnitPrice[]"
              placeholder="Unit Price"
              required
            />
            <input
              type="number"
              name="itemQuantity[]"
              placeholder="Quantity"
              required
            />
            <input
              type="number"
              step="0.01"
              name="itemDiscount[]"
              placeholder="Discount"
              required
            />
            <input
              type="number"
              name="itemShipping[]"
              placeholder="shipping Charges"
              class="full-width"
              required
            />
          </div>
        </div>
        <button type="button" class="add-item-btn" onclick="addItem()">
          Add Item
        </button>

        <!-- Submit Form -->
        <button type="submit">Generate Invoice</button>
      </form>
    </div>

    <script>
      function addItem() {
        const itemsContainer = document.getElementById("items");
        const newItem = document.createElement("div");
        newItem.classList.add("item");
        newItem.innerHTML = `
                <input type="text" name="itemDescription[]" placeholder="Description" class="full-width" required>
                <input type="number" step="0.01" name="itemUnitPrice[]" placeholder="Unit Price" required>
                <input type="number" name="itemQuantity[]" placeholder="Quantity" required>
                <input type="number" step="0.01" name="itemDiscount[]" placeholder="Discount" required>
            `;
        itemsContainer.appendChild(newItem);
      }
    </script>
  </body>
</html>
